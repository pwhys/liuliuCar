<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true"> <!-- pressed -->
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_enabled="true"> <!-- default -->
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- desabled -->
        <shape>
            <solid android:color="@color/transparent_30" />
        </shape>
    </item>
</selector>