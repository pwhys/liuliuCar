<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_style_mm">

    <RelativeLayout
        style="@style/layout_style_mw"
        android:background="@color/activity_background">

        <RelativeLayout
            android:id="@+id/is_choose"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:background="@drawable/btn_green_edge"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_choose" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_recommend"
            style="@style/layout_style_mwh"
            android:layout_height="70dip"
            android:layout_centerVertical="true">

            <RelativeLayout
                style="@style/layout_style_mm"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_mid"
                    android:layout_width="0.1dip"
                    android:layout_height="0.1dip"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dip" />

                <TextView
                    style="@style/textview_style_gray11"
                    android:layout_below="@+id/view_mid"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/first_payment"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/layout_style_wwh"
                    android:layout_above="@+id/view_mid"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_first_payment"
                        style="@style/textview_style_green24"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_first_payment_unit"
                        style="@style/textview_style_green14"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="1dip"
                        android:paddingBottom="2dip"
                        android:text="万"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/layout_style_mm"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_mid_1"
                    android:layout_width="0.1dip"
                    android:layout_height="0.1dip"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dip" />

                <TextView
                    style="@style/textview_style_gray11"
                    android:layout_below="@+id/view_mid_1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/bond"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/layout_style_wwh"
                    android:layout_above="@+id/view_mid_1"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_bond"
                        style="@style/textview_style_green24"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_bond_unit"
                        style="@style/textview_style_green14"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="1dip"
                        android:paddingBottom="2dip"
                        android:text="元"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/layout_style_mm"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_mid_2"
                    android:layout_width="0.1dip"
                    android:layout_height="0.1dip"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dip" />

                <TextView
                    android:id="@+id/tv_monthly_supply_month"
                    style="@style/textview_style_gray11"
                    android:layout_below="@+id/view_mid_2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:paddingBottom="2dip"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/layout_style_wwh"
                    android:layout_above="@+id/view_mid_2"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_monthly_supply"
                        style="@style/textview_style_green24"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_monthly_supply_unit"
                        style="@style/textview_style_green14"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="1dip"
                        android:paddingBottom="2dip"
                        android:text="元"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>